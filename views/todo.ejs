<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="utf-8">
    <title>todo-list</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
  </head>
  <body>
    <header>
      <div class="container">
        <a href="/">TO DO</a>
      </div>
    </header>
    <div class="top-wrapper">
      <div class="container">
        <div class="title">
          <a href="/new">+ 新規登録</a>
          <div class="clear"></div>
        </div>
        <div class="content">
          <div class="content-title">
            <span>TO DO リスト</span>
          </div>
          <div class="content-main">
            <% users.forEach((use) =>{ %>
              <li>
                <div class="item-data">
                  <span class="check fa fa-circle-o">
                    <span class="line"><%= use.name %></span>
                  </span>
                </div>
                <div class="item-menu">
                  <form action="/delete/<%= use.id %>" method="post">
                    <input type="submit" value="削除">
                  </form>
                  <a href="/edit/<%= use.id%>">編集</a>
                </div>
              </li>
            <%  })%>
          </div>
        </div>
      </div>
    </div>

    <script>
      $(function(){
        $('.check').click(function(){
          if($(this).hasClass('fa fa-circle-o')){
            $(this).removeClass('fa fa-circle-o');
            $(this).addClass('fa fa-check-circle-o');
            $(this).find('.line').css("text-decoration","line-through");
            $(this).find('.line').css("color","red");
          }else{
            $(this).removeClass('fa fa-check-circle-o');
            $(this).addClass('fa fa-circle-o');
            $(this).find('.line').css("text-decoration","none");
            $(this).find('.line').css("color","black");
          }
        });
      });
    </script>
  </body>
</html>
